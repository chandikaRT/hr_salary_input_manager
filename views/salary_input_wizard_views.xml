<odoo>
    <record id="view_hr_salary_input_upload_wizard" model="ir.ui.view">
        <field name="name">hr.salary.input.upload.wizard.form</field>
        <field name="model">hr.salary.input.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Salary Inputs">
                <group>
                    <field name="file"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="import_file" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
